<%- include("../partials/header") %> 

<div class="row">
    <div class="col mt-4">
        <h1 class="text-center">Create a New Campground</h1>
        <div class="mx-auto mt-4" style="width: 30%;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="campName">Name</label>
                    <input class="form-control" id="campName" type="text" placeholder="name" name="name">
                </div>
                <div class="form-group">
                    <label for="campImage">Image</label>
                    <input type="file" id="campImage" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="campPrice">Price</label>
                    <input class="form-control" type="number" id="campPrice" placeholder="price" name="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="campDescription">Description</label>
                    <input class="form-control" type="text" id="campDescription" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="location">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-default btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %> 