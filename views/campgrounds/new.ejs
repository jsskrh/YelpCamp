<%- include("../partials/header") %> 

<div class="row">
    <div class="col mt-4">
        <h1 class="text-center">Create a New Campground</h1>
        <div class="mx-auto mt-4" style="width: 30%;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
                    <input class="form-control" type="text" placeholder="description" name="description">
                    <input class="form-control" type="text" name="location" id="location" placeholder="location">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-default btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %> 