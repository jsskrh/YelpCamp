<%- include("../partials/header") %> 

<div class="row">
    <div class="col mt-4">
        <h1 class="text-center">Edit Comment</h1>
        <div class="mx-auto mt-4" style="width: 30%;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-default btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %> 